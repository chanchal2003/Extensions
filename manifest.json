{
    "name": "Invert.io",
    "version": "1.0.0",
    "manifest_version": 3,   //version of chrome
    "description": "Bored of looking at websites the same way? Meet Invert.io, a chrome extension that can change your website from dark mood to light mode and vice versa! :) ",
    "minimum_chrome_version": "93", 
    "background": {
        "service_worker": "popup.js",  //script files to be added/needed in the background to build the extension
        "type": "module"
    },
    "action": {
        "default_title": "Invert.io",
        "default_popup": "popup.html"
    },
    "permissions":[
        "tabs"
    ],
    "optional_host_permissions": [ //gives access to all http,https,and all tabs
        "*://*/*",
        "https://*/*",
        "http://*/*"
      ]
}